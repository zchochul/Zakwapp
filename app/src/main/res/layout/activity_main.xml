<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/Feed_button"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:contentDescription="EAT"
            android:scaleType="centerCrop"
            android:src="@drawable/eating_official"
            android:text="Eat!" />


        <ImageButton
            android:id="@+id/Is_Dead_Button"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:contentDescription="DEAD"
            android:scaleType="centerCrop"
            android:src="@drawable/death_official"
            android:gravity="center"
            android:text="Dead?" />

        <ImageButton
            android:id="@+id/Movies_Button"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="centerCrop"
            android:contentDescription="MOVIE"
            android:src="@drawable/movies_official"
            android:layout_weight="1"
            android:text="Watch!" />

        <ImageButton
            android:id="@+id/Calendar_Button"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:contentDescription="TIME"
            android:scaleType="centerCrop"
            android:src="@drawable/calendar_official"
            android:layout_weight="1"
            android:text="Calendar" />
        




    </LinearLayout>

    <ImageView
        android:id="@+id/Zakwas_View_Picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

</LinearLayout>