<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Feeding">

    <TextView
        android:id="@+id/feedingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FEEDING TIME!!!" />

    <TextView
        android:id="@+id/flourText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How many spoons of flour?" />

    <EditText
        android:id="@+id/flourEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="none" />

    <TextView
        android:id="@+id/waterText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How many spoons of water?" />

    <EditText
        android:id="@+id/waterEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="none" />

    <Button
        android:id="@+id/doneFeedingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DONE!" />

</LinearLayout>